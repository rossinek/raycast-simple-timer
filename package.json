{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "simple-timer",
  "version": "0.1.0",
  "title": "Simple Timer",
  "description": "Create a simple countdown timer",
  "icon": "command-icon.png",
  "author": "rosickey",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "start-timer",
      "title": "Start Timer",
      "description": "Set a countdown for a custom amount of time.",
      "mode": "no-view",
      "arguments": [
        {
          "name": "time",
          "placeholder": "type time...",
          "required": false,
          "type": "text"
        }
      ]
    },
    {
      "name": "stop-timer",
      "title": "Stop Timer",
      "description": "Remove active countdown.",
      "mode": "no-view"
    },
    {
      "name": "menu-bar",
      "title": "Refresh Menu Bar",
      "description": "See or stop active countdown from the menu bar.",
      "mode": "menu-bar",
      "interval": "15s"
    }
  ],
  "preferences": [
    {
      "name": "defaultTime",
      "type": "textfield",
      "required": true,
      "title": "Default time",
      "description": "Default time argument for a new timer.",
      "default": "20"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.3"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
